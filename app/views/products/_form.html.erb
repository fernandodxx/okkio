<%= form_with model: product, class: "card flex flex-col gap " do |f| %>

  <div class="flex flex-col">
    <h5 class="font-semibold leading-none mbe-1">Product</h5>
    <p class="text-sm text-subtle">Create your new product in one-click.</p>
  </div>

  <div class="flex flex-col gap mb-2">
    <div>
      <%= f.label :featured_image, style: "display: block" %>
      <%= f.file_field :featured_image, accept: "image/*" %>
    </div>
    <div class="flex flex-col gap-half">
    	<%= f.label :name, class: "text-sm font-medium leading-none" %>
    	<%= f.text_field :name, placeholder: "Name of your product", class: "input" %>
    </div>

    <div> 
      <%= f.label :description %>
      <%= f.rich_text_area :description %>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <%= link_to "Cancel", products_path, class: "btn btn--secondary"%>
  	<%= f.submit class: "btn btn--primary"%>
  </div>

<% end %>