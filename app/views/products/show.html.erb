<div class="flex flex-col gap-half p-6 rounded-md bg-main">

  <!-- Produto: imagem + conteúdo -->
  <div class="flex flex-col md:flex-row gap-6 items-start">

    <!-- Imagem do produto -->
    <% if @product.featured_image.attached? %>
      <div class="flex-shrink-0 w-full md:w-1/3">
        <%= image_tag @product.featured_image.variant(resize_to_fill: [600, 300]),
                      class: "rounded-md w-full object-cover border border-main" %>
      </div>
    <% end %>

    <!-- Informações do produto -->
    <div class="flex flex-col gap-4 w-full">
      <h1 class="text-3xl font-bold text-primary"><%= @product.name %></h1>
      <p class="text-base text-subtle leading-tight"><%= @product.description %></p>
    </div>
  </div>

  <!-- Ações -->
  <div class="flex gap-3 items-center flex-wrap">

    <%= link_to products_path, class: "btn btn--primary", title: "Voltar para produtos" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="lucide lucide-arrow-big-left" width="20" height="20" viewBox="0 0 24 24" stroke="currentColor" fill="none"><path d="M18 15h-6v4l-7-7 7-7v4h6v6z"/></svg>
      <span class="mis-2">Voltar</span>
    <% end %>

    <% if authenticated? %>
      <%= link_to edit_product_path(@product), class: "btn", title: "Editar produto" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="lucide lucide-square-pen" width="20" height="20" viewBox="0 0 24 24" stroke="currentColor" fill="none"><path d="M12 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.375 2.625a1 1 0 0 1 3 3l-9.013 9.014a2 2 0 0 1-.853.505l-2.873.84a.5.5 0 0 1-.62-.62l.84-2.873a2 2 0 0 1 .506-.852z"/></svg>
        <span class="mis-2">Editar</span>
      <% end %>

      <%= button_to @product, method: :delete, data: { turbo_confirm: "Tem certeza que deseja excluir este produto?" }, class: "btn btn--negative", title: "Excluir produto" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="lucide lucide-trash-2" width="20" height="20" viewBox="0 0 24 24" stroke="currentColor" fill="none"><path d="M10 11v6"/><path d="M14 11v6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"/><path d="M3 6h18"/><path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
        <span class="mis-2">Excluir</span>
      <% end %>
    <% end %>

  </div>
</div>

